<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.harameter.harameter.DashboardActivity"
    tools:showIn="@layout/activity_dashboard"
    tools:ignore="ContentDescription">

    <Button
        android:id="@+id/HaraButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorPrimaryLight"
        android:elevation="4dp"
        android:fontFamily="@font/robotolight"
        android:onClick="onClickHaraButton"
        android:text="Hara "
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/HaraInfo"
        app:layout_constraintEnd_toStartOf="@+id/AbdominalButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/AbdominalButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="4dp"
        android:background="@color/colorPrimaryLight"
        android:elevation="4dp"
        android:fontFamily="@font/robotolight"
        android:onClick="onClickAbdominalButton"
        android:text="Abdominal"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/AbdominalInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/HaraButton" />

    <TextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="2dp"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        android:fontFamily="@font/robotolight"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/message"
        app:layout_constraintEnd_toStartOf="@+id/accuracy"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/accuracy"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="2dp"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        android:fontFamily="@font/robotolight"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/message"
        app:layout_constraintEnd_toStartOf="@+id/streak"
        app:layout_constraintStart_toEndOf="@+id/date" />

    <TextView
        android:id="@+id/streak"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        android:fontFamily="@font/robotolight"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/message"
        app:layout_constraintEnd_toStartOf="@+id/select"
        app:layout_constraintStart_toEndOf="@+id/accuracy" />

    <Spinner
        android:id="@+id/select"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryLight"
        android:popupBackground="@color/colorHighlight"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/message"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorHighlight"
        android:fontFamily="@font/robotolight"
        android:text="Select a Breathing Method"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/HaraButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/HaraInfo"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorHighlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/AbdominalInfo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/AbdominalInfo"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="4dp"
        android:background="@color/colorHighlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/HaraInfo" />

    <TextView
        android:id="@+id/DashboardTitle"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryLight"
        android:fontFamily="@font/robotolight"
        android:text="Harameter"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userletter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/userletter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fill"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintEnd_toStartOf="@+id/userletter"
        app:layout_constraintStart_toEndOf="@+id/DashboardTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/haraImage"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/hara"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/HaraInfo"
        app:layout_constraintStart_toStartOf="@+id/HaraInfo"
        app:layout_constraintTop_toTopOf="@+id/HaraInfo" />

    <ImageView
        android:id="@+id/abdominalImage"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/abdominal"
        app:layout_constraintBottom_toBottomOf="@+id/AbdominalInfo"
        app:layout_constraintEnd_toEndOf="@+id/AbdominalInfo"
        app:layout_constraintStart_toEndOf="@+id/HaraInfo"
        app:layout_constraintTop_toTopOf="@+id/AbdominalInfo" />

</android.support.constraint.ConstraintLayout>